<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:ems="9"
        android:maxEms="10"
        android:textSize="92sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/startStopwatchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timetext"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:onClick="startStopwatch"
        android:text="Start"/>

    <Button
        android:id="@+id/stopStopwatchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startStopwatchButton"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:onClick="stopStopwatch"
        android:text="Stop"/>

    <Button
        android:id="@+id/resetStopwatchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stopStopwatchButton"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:onClick="resetStopwatch"
        android:text="Reset"/>


</RelativeLayout>